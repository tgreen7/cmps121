<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cs121.final_project.BeerStatsActivity"
    android:background="@drawable/woodback">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:background="#5c1717"
            android:layout_marginBottom="15dp"
            android:id="@+id/frame1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:src="@drawable/paper"
                    android:scaleType="fitXY" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name\nSize\nStyle\nType"
                        android:id="@+id/textView6"
                        android:padding="5dp"
                        android:singleLine="false"
                        android:lineSpacingExtra="2dp"
                        android:textColor="#000000"
                        android:textAlignment="viewEnd"
                        android:textStyle="bold"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="2dp"
                        android:id="@+id/info1"
                        android:textColor="#575757"
                        android:layout_toRightOf="@+id/textView6"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="2dp"
                        android:id="@+id/textView4"
                        android:text="Boil Time\nEfficiency\nAttenuation"
                        android:textColor="#000000"
                        android:layout_toLeftOf="@+id/info2"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        android:textAlignment="textEnd" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="2dp"
                        android:id="@+id/info2"
                        android:textColor="#575757"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:textAlignment="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" />
                </RelativeLayout>
            </FrameLayout>
        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="125dp"
            android:layout_gravity="left"
            android:background="@color/dark_red"
            android:gravity="left">

            <FrameLayout
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView4"
                    android:src="@drawable/wood"/>

                <ImageView
                    android:layout_width="57dp"
                    android:layout_height="70dp"
                    android:id="@+id/beerimage"
                    android:layout_gravity="center_horizontal|top"
                    android:src="@drawable/beer_13"
                    android:layout_margin="10dp"
                    style="@style/Base.TextAppearance.AppCompat.Button"
                    android:backgroundTint="#c01f1f" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/colorOut"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textColor="#FFFFFF"
                    android:textSize="10dp"
                    android:layout_marginBottom="5dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView3"
                    android:src="@drawable/paper"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/BeerStats"
                        android:id="@+id/statTitles"
                        android:padding="5dp"
                        android:singleLine="false"
                        android:lineSpacingExtra="2dp"
                        android:textColor="#000000"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="2dp"
                        android:id="@+id/statOutput" />

                </LinearLayout>
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
